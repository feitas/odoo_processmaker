<odoo>
    <data>
        <record model="ir.ui.view" id="view_task_tree">
            <field name="name">view.task.tree</field>
            <field name="model">pm.task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_task_form">
            <field name="name">pm.task.form</field>
            <field name="model">pm.task</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>