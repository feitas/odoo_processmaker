<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_link_external_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.event</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="65"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Business Process Manager" string="Business Process Manager" data-key="processmaker" groups="base.group_system">
                        <h2>Business Process Manager</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-12 o_setting_box">
                                <div class="o_setting_left_pane"></div>
                                <div class="o_setting_right_pane">
                                    <label for="pm_url"/>
                                    <field name="pm_url" required="True"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-12 o_setting_box">
                                <div class="o_setting_left_pane"></div>
                                <div class="o_setting_right_pane">
                                    <label for="pm_client_id"/>
                                    <field name="pm_client_id" required="True"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-12 o_setting_box">
                                <div class="o_setting_left_pane"></div>
                                <div class="o_setting_right_pane">
                                    <label for="pm_client_secret"/>
                                    <field name="pm_client_secret" required="True"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-12 o_setting_box">
                                <div class="o_setting_left_pane"></div>
                                <div class="o_setting_right_pane">
                                    <label for="pm_username"/>
                                    <field name="pm_username" required="True"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-12 o_setting_box">
                                <div class="o_setting_left_pane"></div>
                                <div class="o_setting_right_pane">
                                    <label for="pm_password"/>
                                    <field name="pm_password" required="True"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-12 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <button name="update_processes" class="btn-primary" type="object" title="Update" string="Sync Data" icon="fa-refresh"/>
                                </div>
                            </div>
                        </div>

                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
