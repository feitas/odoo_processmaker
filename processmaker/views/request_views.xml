<odoo>
    <data>
        <record model="ir.ui.view" id="view_request_tree">
            <field name="name">view.request.tree</field>
            <field name="model">pm.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="process_id"/>
                    <field name="pm_callable_id"/>
                    <field name="pm_activity_id"/>
                    <field name="pm_user"/>
                    <field name="related_model"/>
                    <field name="related_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_request_form">
            <field name="name">pm.request.form</field>
            <field name="model">pm.request</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="process_id"/>
                            <field name="pm_callable_id"/>
                            <field name="pm_activity_id"/>
                            <field name="pm_user"/>
                            <field name="related_model"/>
                            <field name="related_id"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>