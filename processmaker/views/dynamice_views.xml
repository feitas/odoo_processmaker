<odoo>
    <data>
        <record id="pm_dynamic_form_tree" model="ir.ui.view">
            <field name="name">dynamic_form_tree</field>
            <field name="model">pm.dynamic_form</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <tree string="Dynamic Form">
                    <field name="name"/>
                    <field name="process_id"/>
                    <field name="pm_screen_id"/>
                    <field name="pm_screen_name"/>
                    <field name="pm_screen_label"/>
                    <field name="pm_screen_type"/>
                </tree>
            </field>
        </record>

        <record id="pm_dynamic_form_form" model="ir.ui.view">
            <field name="name">dynamic_form_form</field>
            <field name="model">pm.dynamic_form</field>
            <field name="arch" type="xml">
                <form string="Dynamic form">
                    <sheet>
                        <group>
                            <field name="process_id"/>
                            <field name="name"/>
                            <field name="pm_screen_id"/>
                            <field name="pm_screen_name"/>
                            <field name="pm_screen_label"/>
                            <field name="pm_screen_type"/>
                        </group>
                        <notebook>
                            <page string="Items">
                                <field name="dynamic_form_items">
                                    <tree string="Process Date Calculated">
                                        <field name="pm_screen_item_name"/>
                                        <field name="pm_screen_item_label"/>
                                        <field name="pm_screen_item_type" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
